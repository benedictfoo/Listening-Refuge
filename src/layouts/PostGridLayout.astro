---
import {Image} from "astro:assets";
import FormattedDate from "../components/FormattedDate.astro";
import PostExcerpt from '@igor.dvlpr/astro-post-excerpt'
import type {CollectionEntry} from "astro:content";
import {POSTS_PER_PAGE} from "../consts";

type Post = CollectionEntry<'blog'>



const {posts, title} = Astro.props;
---


<div class="px-3">
    {title && (
            <div }>

                <h1 class={`${posts.length < POSTS_PER_PAGE && 'max-w-[50vw] mx-auto'} text-4xl font-black `}>{title}</h1>
            </div>)}
    <ul class={`list-none py-3 ${posts.length < POSTS_PER_PAGE ? 'max-w-[50vw] mx-auto' : 'sm:grid sm:grid-cols-3'} sm:gap-3`}>
        {posts.map((post: Post) => (
                <li class="py-3 md:col-span-1 ">
                    <a href={`/blog/${post.id}/`}>
                        {post.data.heroImage && (

                                <Image
                                        class="w-full"
                                        widths={[400, 640, 800, 1280]}
                                        sizes="(max-width: 639px) 100vw, 33vw"

                                        src={post.data.heroImage}
                                        alt=""

                                />
                        )}
                    </a>

                    <div class="py-3 px-1">


                        <a class="no-underline" href={`/blog/${post.id}/`}>
                            <h2 class="text-xl font-semibold">{post.data.title}</h2>
                            <p class="font-medium ">
                                <FormattedDate date={post.data.pubDate}/>
                            </p>
                            <div class="py-3">
                                <PostExcerpt post={post} smartEllipsis={true} maxLength={0}/>
                            </div>
                        </a>
                    </div>
                </li>
        ))}

    </ul>
</div>



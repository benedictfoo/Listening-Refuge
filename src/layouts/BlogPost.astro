---
import type {CollectionEntry} from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import Accreditation from "../components/Accreditation.astro";
import {Image} from 'astro:assets'
import Prose from "../components/Prose.astro";

type Props = CollectionEntry<'blog'>['data'];

const {
    title,
    description,
    pubDate,
    updatedDate,
    imageAuthor,
    imageAuthorLink,
    imageSource,
    imageSourceLink,
    heroImage, tags
} = Astro.props;
---

<html lang="en">
<head>
    <BaseHead title={title} description={description}/>

</head>

<body class="min-h-screen grid grid-rows-[auto_1fr_auto]">
<Header/>
<main class=" max-w-4xl mx-auto  sm:px-10 md:px-20">
    <article>

        <Prose>
            {heroImage && (
                    <div class="">
                        <Image width={1020} height={510} src={heroImage} alt=""/>

                    </div>
            )}
            {imageSource && imageSourceLink && imageAuthor && imageAuthorLink &&
                    <Accreditation heroImage={heroImage} imageAuthor={imageAuthor}
                                   imageAuthorLink={imageAuthorLink} imageSource={imageSource}
                                   imageSourceLink={imageSourceLink} alt=""/>}
            <h1>{title}</h1>


            <FormattedDate date={pubDate}/>
            {
                updatedDate && (
                            <div class="">
                                Last updated on
                                <FormattedDate date={updatedDate}/>
                            </div>
                )
            }

            <p class="flex flex-wrap gap-2">
                {tags?.map((tag: any) =>
                        <button class="px-3 py-2 rounded-md bg-emerald-300 border-black"><a class="no-underline"
                                                                                            href={`/tags/${tag}/`}>{tag}</a>
                        </button>)}
            </p>

            <hr/>

            <slot/>
        </Prose>
    </article>
</main>
<Footer/>
</body>
</html>
